<h1>Movies</h1>

<table border="1">
  <thead>
    <th>Title</th>
    <th>Year</th>
    <th>Superhero</th>
    <th>MPAA Rating</th>
    <th>Director</th>
    <th>Synopsis</th>
    <% if admin? %>
      <th>Delete</th>
    <% end %>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr id=<%= "movie_#{movie.id}" %>>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.year %>
        </td>
        <td>
          <%= movie.superhero %>
        </td>
        <td>
          <%= movie.mpaa_rating %>
        </td>
        <td>
          <%= movie.director %>
        </td>
        <td>
          <%= movie.synopsis %>
        </td>
        <% if admin? %>
          <td>
            <%= link_to 'Delete', movie_path(movie), method: :delete %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @movies %>
